{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "$(blobUrl)/card-logo.jpg"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "$(answer)",
            "separator": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    },
                                    "title": "Terminal SUBE"
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    },
                                    "title": "Cajero automático"
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    },
                                    "title": "Guardería"
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    },
                                    "title": "Abono telefonía móvil"
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    },
                                    "title": "Adelanto o cancelar en cuotas"
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    },
                                    "title": "Días de estudio adicionales Jornada Docente"
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    },
                                    "title": "Gastos Internet"
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    },
                                    "title": "Mudanza"
                                }
                            ]
                        }
                    ],
                    "width": "stretch",
                    "spacing": "None",
                    "horizontalAlignment": "Center"
                }
            ],
            "style": "default",
            "minHeight": "0px",
            "spacing": "None",
            "horizontalAlignment": "Center"
        }
    ]
}
