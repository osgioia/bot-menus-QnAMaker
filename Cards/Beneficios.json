{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "$(blobUrl)/card-logo.jpg"
            }
          ],
          "verticalContentAlignment": "Center"
        }
      ]
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "text": "$(answer)",
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Guardería"
                  },
                  "title": "Guardería"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "telefonía móvil"
                  },
                  "title": "Abono telefonía móvil"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Seguro de vida optativo"
                  },
                  "title": "Seguro de vida optativo"
                }

              ]
            },
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Adelanto a cancelar en cuotas"
                  },
                  "title": "Adelanto a cancelar en cuotas"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Acuerdo con Universidades"
                  },
                  "title": "Acuerdo con Universidades"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Prestadora médica"
                  },
                  "title": "Prestadora médica"
                }
              ]
            },
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Gimnasios"
                  },
                  "title": "Gimnasios"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Bicicletas y Motos"
                  },
                  "title": "Estacionamiento bicis, monopatín y motos"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Horario Flexible"
                  },
                  "title": "Horario Flexible"
                }
              ]
            }
          ],
          "width": "stretch",
          "spacing": "None",
          "horizontalAlignment": "Center"
        }
      ],
      "style": "default",
      "minHeight": "0px",
      "spacing": "None",
      "horizontalAlignment": "Center"
    }
  ]
}