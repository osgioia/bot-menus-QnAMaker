{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "$(blobUrl)/card-logo.jpg"
            }
          ],
          "verticalContentAlignment": "Center"
        }
      ]
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "text": "$(answer)",
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Información personal"
                  },
                  "title": "Información personal"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Recibo digital"
                  },
                  "title": "Recibo haberes"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Certificado Trabajo"
                  },
                  "title": "Certificado Trabajo"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Menú inicial"
                  },
                  "title": "Menú inicial"
                }

              ]
            }
          ],
          "width": "stretch"
        }
      ],
      "separator": true
    }
  ]
}
