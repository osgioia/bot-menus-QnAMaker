{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "$(blobUrl)/card-logo.jpg"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "$(answer)",
            "separator": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Bancos",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    }
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Usuario de Red",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    }
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Licencias",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    }
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "RRHH",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    }
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Beneficios",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    }
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Salud Ocupacional",
                                    "data": {
                                        "question": "$(question)",
                                        "answer": "$(answer)"
                                    }
                                }
                            ]
                        }
                    ],
                    "width": "stretch"
                }
            ],
            "separator": true
        }
    ]
}
