{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "$(blobUrl)/card-logo.jpg"
            }
          ],
          "verticalContentAlignment": "Center"
        }
      ]
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "text": "$(answer)",
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Credencial de Ingreso"
                  },
                  "title": "Credencial de Ingreso"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Horas extras"
                  },
                  "title": "Horas extras"
                },
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Cierre vedades para liquidación"
                  },
                  "title": "Cierre Novedades para liquidación"
                }
              ]
            },
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Fecha de Pago"
                  },
                  "title": "Fecha de Pago"
                },
                {
                  "type": "Action.Submit",
                  "title": "Recibo digital",
                  "data": {
                    "value": "Recibo digital"
                  }
                },
                {
                  "type": "Action.Submit",
                  "title": "Aguinaldo",
                  "data": {
                    "value": "Aguinaldo"
                  }
                },
                {
                  "type": "Action.Submit",
                  "title": "Búsquedas Internas",
                  "data": {
                    "value": "Búsquedas Internas"
                  }
                }
                
              ]
            },
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "data": {
                    "value": "Anticipos"
                  },
                  "title": "Anticipos"
                },
                {
                  "type": "Action.Submit",
                  "title": "Carga de GPO",
                  "data": {
                    "value": "Carga de GPPO"
                  }
                },
                {
                  "type": "Action.Submit",
                  "title": "Evaluación Desempeño",
                  "data": {
                    "value": "Evaluación Desempeño"
                  }
                },
                {
                  "type": "Action.Submit",
                  "title": "Formación",
                  "data": {
                    "value": "Formación"
                  }
                },
                
                {
                  "type": "Action.Submit",
                  "title": "Menú inicial",
                  "data": {
                    "value": "Menú inicial"
                  }
                }
              ]
            }
          ],
          "width": "stretch",
          "spacing": "None",
          "horizontalAlignment": "Center"
        }
      ],
      "style": "default",
      "minHeight": "0px",
      "spacing": "None",
      "horizontalAlignment": "Center"
    }
  ]
}
