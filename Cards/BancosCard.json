{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "$(blobUrl)/card-logo.jpg"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "$(answer)",
            "separator": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                              {
                                "type": "Action.Submit",
                                "data": {
                                  "value": "Cambiar de banco"
                                },
                                "title": "Cambiar de banco"
                              }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                  "data": {
                                    "value": "Cajero Automático"
                                  },
                                    "title": "Cajero Automático"
                                }
                            ]
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                  "data": {
                                    "value": "Menú Inicial"
                                  },
                                    "title": "Menú Inicial"
                                }
                            ]
                        }
                    ],
                    "width": "stretch",
                    "spacing": "None",
                    "horizontalAlignment": "Center"
                }
            ],
            "style": "default",
            "minHeight": "0px",
            "spacing": "None",
            "horizontalAlignment": "Center"
        }
    ]
}
