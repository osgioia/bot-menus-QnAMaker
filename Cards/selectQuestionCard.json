{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://botdepot.blob.core.windows.net/imagenes-desky/logicalis-logo.png",
              "size": "Large"
            }
          ],
          "verticalContentAlignment": "Center"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Puede ser que hayas querido preguntar:",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "choosenQuestion",
      "style": "expanded",
      "isMultiSelect": false,
      "choices": "$(choices)",
      "wrap": true,
      "value": "$(value)"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Seleccionar",
          "style": "positive",
          "data": {
            "question": "$(question)"
          }
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "$(reportMsg)",
              "isSubtle": true,
              "wrap": true,
              "spacing": "Small",
              "size": "Small"
            }
          ],
          "width": "stretch"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Reportar",
                  "data": {
                    "question": "$(question)",
                    "answer": "$(answers)"
                  },
                  "style": "destructive"
                }
              ]
            }
          ],
          "width": "auto"
        }
      ],
      "separator": true
    }
  ]
}